    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Firefox",
            "file": "${workspaceFolder}/index.html",
            "pathMappings": [
                {
                    "url": "file://",
                    "path": ""
                },
                {
                    "url": "file://",
                    "path": ""
                }
            ]
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}